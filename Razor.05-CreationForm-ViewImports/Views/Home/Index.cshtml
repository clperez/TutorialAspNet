
@model IEnumerable<Product>
@{
    ViewBag.Title = "Product Name";
}

<table>
    <tbody>
        @foreach (Product p in Model)
        {
            <div data-productid="@p.ProductID" data-stocklevel="@p.Stock" class="square">
                <p>Product Name: @p.Name</p>
                <p>Product Price: @($"{p.Price:C2}")</p>
                <p>
                    Stock Level Warehouse 1:
                    @switch (p.Stock)
                    {
                        case 0:
                            @:Out of Stock
                            break;
                        case 1:
                        case 2:
                        case 3:
                            <b>Low Stock (@p.Stock)</b>
                            break;
                        default:
                            @: @p.Stock in Stock
                            break;
                    }
                </p>
                <p>
                    Stock Level Warehouse 2:
                    @if (p.Stock == 0)
                    {
                        @:Out of Stock
                    }
                    else if (p.Stock > 0 && p.Stock <= 3)
                    {
                        <b>Low Stock (@p.Stock)</b>
                    }
                    else
                    {
                        @: @p.Stock in Stock
                    }
                </p>
            </div>
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-action="AddProduct">
        Add New Product
    </a>
</div>